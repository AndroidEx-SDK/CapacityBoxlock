<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.androidex.capbox.ui.widget.SecondTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:titleText="@string/about_title_tv" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginPadding50"
        android:src="@mipmap/icon" />

    <TextView
        android:id="@+id/about_tv_versionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginPadding16"
        android:layout_marginTop="@dimen/marginPadding16"
        android:text="@string/about_tv2"
        android:textColor="@color/white"
        android:textSize="@dimen/about_tv2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_line_height"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_user_regimen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginPadding45"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginPadding16"
            android:layout_weight="1"
            android:text="@string/about_tv3"
            android:textColor="@color/white"
            android:textSize="@dimen/size16" />

        <ImageView
            android:layout_width="@dimen/marginPadding20"
            android:layout_height="@dimen/marginPadding20"
            android:layout_marginRight="@dimen/marginPadding16"
            android:src="@mipmap/white_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_line_height"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_all_right_reserved"
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginPadding45"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginPadding16"
            android:layout_weight="1"
            android:text="@string/about_tv4"
            android:textColor="@color/white"
            android:textSize="@dimen/size16" />

        <ImageView
            android:layout_width="@dimen/marginPadding20"
            android:layout_height="@dimen/marginPadding20"
            android:layout_marginRight="@dimen/marginPadding16"
            android:src="@mipmap/white_right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_line_height"
        android:background="@color/line_color" />

</LinearLayout>