<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.androidex.capbox.ui.view.TypeFaceText
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settint_title_tv"
            android:textColor="@color/white"
            android:textSize="@dimen/title_tv_size" />

        <TextView
            android:id="@+id/settint_bt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marginPadding16"
            android:gravity="center"
            android:padding="10dp"
            android:text="设置"
            android:textColor="@color/white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/marginPadding16"
                    android:layout_marginLeft="@dimen/marginPadding16"
                    android:layout_marginTop="@dimen/marginPadding8"
                    android:src="@mipmap/ic_label_head" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_head"
                    android:layout_marginLeft="@dimen/marginPadding16"
                    android:layout_marginTop="@dimen/marginPadding16"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size18" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/marginPadding16"
                    android:layout_marginTop="@dimen/marginPadding16"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="15829873689"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size18" />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="@dimen/marginPadding20"
                    android:layout_height="@dimen/marginPadding20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/marginPadding30"
                    android:src="@mipmap/white_right" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_line_height"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/adduser_ll_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginPadding16">

                <com.androidex.capbox.ui.view.TypeFaceText
                    android:id="@+id/TextViewIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/setting_tv_padding_left"
                    android:text="@string/setting_tv_Indicator"
                    android:textColor="@color/white"
                    android:textSize="@dimen/setting_tv" />

                <ToggleButton
                    android:id="@+id/setting_img_indicator_light"
                    android:layout_width="@dimen/marginPadding120"
                    android:layout_height="@dimen/marginPadding35"
                    android:layout_marginRight="@dimen/marginPadding16"
                    android:background="@drawable/thumbs"
                    android:checked="false"
                    android:textOff="  "
                    android:textOn="  " />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_line_height"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/setting_alarm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/adduser_ll_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginPadding16">

                <com.androidex.capbox.ui.view.TypeFaceText
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/setting_tv_padding_left"
                    android:text="@string/setting_tv_mode"
                    android:textColor="@color/white"
                    android:textSize="@dimen/setting_tv" />

                <ImageView
                    android:layout_width="@dimen/marginPadding20"
                    android:layout_height="@dimen/marginPadding20"
                    android:layout_marginRight="@dimen/marginPadding30"
                    android:src="@mipmap/white_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_line_height"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/setting_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/adduser_ll_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginPadding16">

                <com.androidex.capbox.ui.view.TypeFaceText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/setting_tv_padding_left"
                    android:text="@string/setting_tv_about"
                    android:textColor="@color/white"
                    android:textSize="@dimen/setting_tv" />

                <ImageView
                    android:layout_width="@dimen/marginPadding20"
                    android:layout_height="@dimen/marginPadding20"
                    android:layout_marginRight="@dimen/marginPadding30"
                    android:src="@mipmap/white_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_line_height"
                android:background="@color/line_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>